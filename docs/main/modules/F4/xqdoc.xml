(:~ import page :)
declare 
%xqdoca:global("imports","Summary of import usage")
%xqdoca:output("imports.html","html5") 
function _:imports($model,$opts)
{
  let $imports:=xqd:imports($model)
  let $body:=&lt;div&gt;
     &lt;h1&gt;
                     Project &lt;span class="badge badge-info"&gt;
                      { $opts?project }
                  &lt;/span&gt;
                  &amp;#160;Imports 
              &lt;/h1&gt;
   &lt;nav id="toc"&gt;
            &lt;h2&gt;
                &lt;a href="index.html" &gt;
                    { $model?project }
                &lt;/a&gt;
                / Imports
            &lt;/h2&gt;
           
            &lt;h3&gt;
               Contents
            &lt;/h3&gt;
            &lt;ol class="toc"&gt;
                &lt;li&gt;
                    &lt;a href="#main"&gt;
                        &lt;span class="secno"&gt;1 &lt;/span&gt;
                        &lt;span class="content"&gt;Summary&lt;/span&gt;
                    &lt;/a&gt;
                &lt;/li&gt;
                  &lt;li&gt;
                    &lt;a href="#namespaces"&gt;
                        &lt;span class="secno"&gt;2 &lt;/span&gt;
                        &lt;span class="content"&gt;Namespaces&lt;/span&gt;
                    &lt;/a&gt;
                &lt;/li&gt;
                
             &lt;/ol&gt;
           &lt;/nav&gt;
            {_:summary($model,$opts)}
              &lt;div class="div2"&gt;
                 &lt;h2&gt;&lt;a id="annotations"/&gt;2 Namespaces&lt;/h2&gt;
                 &lt;p&gt;There are { map:size($imports) } imported namespaces.&lt;/p&gt;
                       {
               for $ns in map:keys($imports)
                 order by $ns
                 return  _:by-ns($ns,$imports?($ns))
                 }
              &lt;/div&gt;
       &lt;/div&gt;
  return  page:wrap($body,$opts)
};


declare function _:by-ns($ns,$files){
   &lt;div class="div3" &gt;
           &lt;h3&gt;&lt;a id="{ $ns }"/&gt;{ $ns } &lt;small&gt; is imported by &lt;/small&gt;
           &lt;div  style="float:right"&gt;&lt;a href="#{ $ns }"&gt;#&lt;/a&gt;&lt;/div&gt;
           &lt;/h3&gt;
           &lt;ul&gt;
           {for $f in  $files
           return &lt;li&gt;&lt;a href="{$f?href}index.html"&gt;{ $f?namespace }&lt;/a&gt;&lt;/li&gt;
         }
           &lt;/ul&gt;
           &lt;/div&gt;
};

declare function _:summary($model,$opts)
as element(div)
{
  &lt;div class="div2"&gt;
    &lt;h2&gt;&lt;a id="summary"/&gt;1 Summary&lt;/h2&gt;
