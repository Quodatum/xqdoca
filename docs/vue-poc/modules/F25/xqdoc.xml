<xqdoc:xqdoc xmlns:xqdoc="http://www.xqdoc.org/1.0"><xqdoc:control><xqdoc:date>2019-05-22T11:22:52.354+01:00</xqdoc:date><xqdoc:version>1.1</xqdoc:version></xqdoc:control><xqdoc:module type="library"><xqdoc:uri>quodatum.test.basexsettings</xqdoc:uri><xqdoc:name>basexsettings.xqm</xqdoc:name><xqdoc:comment><xqdoc:description>get basex settings default and current</xqdoc:description><xqdoc:custom tag="__source">features/server/basexsettings.xqm</xqdoc:custom></xqdoc:comment><xqdoc:body>xquery version "3.1";
(:~
 :  get basex settings default and current
 :)
module namespace set = 'quodatum.test.basexsettings';


declare   
%rest:GET %rest:path("/vue-poc/api/server/basexsettings")
%rest:produces("application/json")
%output:method("json") 
function set:values()
{
  let $defaults:=doc("basexsettings-921.xml")//*[not(*)]
  let $dm:=map:merge($defaults!map:entry(name(.),string(.)))
  let $settings:=db:system()//*[not(*)]
  let $sm:=map:merge($settings!map:entry(name(.),string(.)))
  let $names:=distinct-values((map:keys( $dm),map:keys($sm)))=&gt;sort()
 return &lt;json type="array"&gt;
{for $name in $names return &lt;_ type="object"&gt;
                                &lt;name&gt;{$name}&lt;/name&gt;
                                &lt;default&gt;{$dm($name)}&lt;/default&gt;
                                &lt;current&gt;{$sm($name)}&lt;/current&gt;
                                &lt;changed type="boolean"&gt;{$dm($name) ne $sm($name)}&lt;/changed&gt;
                            &lt;/_&gt;}
 &lt;/json&gt;
};

</xqdoc:body></xqdoc:module><xqdoc:namespaces><xqdoc:namespace prefix="set" uri="quodatum.test.basexsettings"/><xqdoc:namespace prefix="rest" uri="http://exquery.org/ns/restxq"/><xqdoc:namespace prefix="output" uri="http://www.w3.org/2010/xslt-xquery-serialization"/></xqdoc:namespaces><xqdoc:imports/><xqdoc:variables/><xqdoc:functions><xqdoc:function arity="0"><xqdoc:name>set:values</xqdoc:name><xqdoc:annotations><xqdoc:annotation name="rest:GET"/><xqdoc:annotation name="rest:path"><xqdoc:literal type="xs:string">/vue-poc/api/server/basexsettings</xqdoc:literal></xqdoc:annotation><xqdoc:annotation name="rest:produces"><xqdoc:literal type="xs:string">application/json</xqdoc:literal></xqdoc:annotation><xqdoc:annotation name="output:method"><xqdoc:literal type="xs:string">json</xqdoc:literal></xqdoc:annotation></xqdoc:annotations><xqdoc:signature>declare %rest:GET %rest:path("/vue-poc/api/server/basexsettings") %rest:produces("application/json") %output:method("json") function set:values() as item()*</xqdoc:signature><xqdoc:return><xqdoc:type occurrence="*">item()</xqdoc:type></xqdoc:return><xqdoc:body>function set:values()
