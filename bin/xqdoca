#!/usr/bin/env bash

# basex  -befolder=/config/workspace/XML-CMS/data_server/eBloomsbury -btarget=file:/config/workspace/doc ~/workspace/quodatum/xqdoca/src/main/xqdoca.xq
# Path to this script
FILE="${BASH_SOURCE[0]}"
while [ -h "$FILE" ] ; do
  SRC="$(readlink "$FILE")"
  FILE="$( cd -P "$(dirname "$FILE")" && \
           cd -P "$(dirname "$SRC")" && pwd )/$(basename "$SRC")"
done
MAIN="$( cd -P "$(dirname "$FILE")/.." && pwd )"

EFOLDER=/config/workspace/XML-CMS/data_server/eBloomsbury
TARGET=file:///config/workspace/doc/
basex -befolder=$EFOLDER -btarget=$TARGET $MAIN/src/main/xqdoca.xq
